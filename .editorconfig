# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true

[*.{txt,py,md}]
charset = utf-8

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = tab
indent_size = 2

